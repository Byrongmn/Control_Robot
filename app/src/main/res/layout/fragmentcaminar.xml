<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ec.edu.ups.byron_adrian_gmn.controlrobot.FragmentCaminar">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/caminartxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="MOVIMIENTO"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/BufferCaminartxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/caminartxt"
                android:layout_marginTop="15dp"
                android:text="Dato:"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Caminarbtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/adelante"
                android:text="" />

            <Button
                android:id="@+id/Pararbtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/Izquierdabtn"
                android:layout_centerHorizontal="true"
                android:background="@drawable/detener"
                android:layout_below="@+id/Caminarbtn"
                android:text="Detener" />

            <Button
                android:id="@+id/Retrocederbtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="270dp"
                android:background="@drawable/atras"
                android:text="" />

            <Button
                android:id="@+id/Izquierdabtn"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Caminarbtn"
                android:layout_marginTop="10dp"
                android:background="@drawable/izquierda"
                android:text="" />

            <Button
                android:id="@+id/Derechabtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/Caminarbtn"
                android:layout_marginTop="10dp"
                android:background="@drawable/derecha"
                android:text="" />


            <Button
                android:id="@+id/Desconectarbtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="510dp"
                android:background="@drawable/desconecta" />


        </RelativeLayout>
    </ScrollView>

</FrameLayout>
